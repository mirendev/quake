# Default task
task default => build

# Build the project
task build {
    go build -o quake main.go
}

# Run tests
task test {
    go test ./...
}

# Format code
task fmt {
    go fmt ./...
}

task clean {
    rm -f quake
}

# Install the binary
task install => build {
    cp quake ~/go/bin/
}

# Test task with multiple commands
task multi {
    echo "First command"
    echo "Second command"  
    echo "Third command"
    echo "Last command"
}

# Run tests with coverage report for each package
task coverage {
    go test -coverprofile=coverage.out ./...
    go tool cover -func=coverage.out
    rm -f coverage.out
}
